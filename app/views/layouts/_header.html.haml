.navbar.navbar-fixed-top
  .navbar-inner
    .container
      = link_to t("brand"), root_path, class: "brand"
      .container.nav-collapse
        %ul.nav
          %li= link_to t("menu.home"), root_path
          %li= link_to t("menu.blog"), blogs_path

        %ul.nav.pull-right
          - if current_twitter_user
            %li= link_to "@#{current_twitter_user.screen_name}", "https://twitter.com/#{current_twitter_user.screen_name}", target: "_blank"

